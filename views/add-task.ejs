<%- include("partials/header") %>
    <div class="table-container">
      <h2 class="task-title">Add task</h2>

      <div>
        <a class="btn" href="/">Back</a>

        <form action="/add-new-task" method="post">
          <div class="new-task">

            <div class="form-group">
              <label for="title" class="text-light">Title</label>
              <input type="text" name="title" value="" placeholder="Type task here" id="title" required/>
            </div>

            <div class="form-group">
              <label for="desc" class="text-light">Description</label>
              <input type="text" name="desc" value="" placeholder="Type description here" id="desc"/>
            </div>

            <div class="form-group">
              <button type="submit" class="btn">Save</button>
            </div>

          </div>
        </form>
      </div>
    </div>
<%- include("partials/footer") %>